<% provide(:title, "Benutzerkonto erstellen") %>

<div class="jumbotron">
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

     <%= render 'shared/error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>


      <%= f.label :benutzername %>
      <%= f.text_field :benutzername, class: 'form-control' %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Passwort bestÃ¤tigen" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Benutzerkonto erstellen", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>